# ===================================
# Ergo Price MCP Server Configuration
# ===================================

# CRUX Finance API Configuration
# Base URL for CRUX Finance API
CRUX_API_BASE_URL=https://api.cruxfinance.io

# API Key for CRUX Finance API (if required)
# Leave empty if no authentication is needed
CRUX_API_KEY=

# API request timeout in seconds
CRUX_API_TIMEOUT=30

# Maximum number of retry attempts for failed API requests
CRUX_API_MAX_RETRIES=3

# Retry delay in seconds (exponential backoff base)
CRUX_API_RETRY_DELAY=1.0

# ===================================
# Caching Configuration
# ===================================

# Cache TTL for price data in seconds (30 seconds)
CACHE_TTL_PRICE=30

# Cache TTL for asset metadata in seconds (5 minutes)
CACHE_TTL_METADATA=300

# Cache TTL for historical data in seconds (1 hour)
CACHE_TTL_HISTORY=3600

# Cache TTL for static data in seconds (24 hours)
CACHE_TTL_STATIC=86400

# Maximum cache size (number of entries)
CACHE_MAX_SIZE=1000

# ===================================
# MCP Server Configuration
# ===================================

# MCP server name
MCP_SERVER_NAME=ergo-price-mcp

# MCP server version
MCP_SERVER_VERSION=1.0.0

# MCP server description
MCP_SERVER_DESCRIPTION="MCP server for Ergo blockchain pricing data via CRUX Finance API"

# ===================================
# Logging Configuration
# ===================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=json

# Enable/disable request/response logging
LOG_REQUESTS=true

# Log file path (optional, logs to console if not set)
LOG_FILE=

# ===================================
# Rate Limiting Configuration
# ===================================

# Enable rate limiting for CRUX API calls
ENABLE_RATE_LIMITING=true

# Requests per minute limit for CRUX API
RATE_LIMIT_RPM=100

# Rate limit burst size
RATE_LIMIT_BURST=10

# ===================================
# Development/Testing Configuration
# ===================================

# Enable debug mode
DEBUG=false

# Enable development mode features
DEV_MODE=false

# Mock CRUX API responses (for testing)
MOCK_CRUX_API=false

# Test data directory
TEST_DATA_DIR=tests/fixtures
