# Ergo Price MCP Server Configuration
# Copy this file to .env and update the values as needed

# CRUX Finance API Configuration
CRUX_API_BASE_URL=https://api.cruxfinance.io
CRUX_API_KEY=your_api_key_here_if_required
CRUX_API_TIMEOUT=30.0
CRUX_API_MAX_RETRIES=3
CRUX_API_RETRY_DELAY=1.0

# Cache Configuration
CACHE_TTL_PRICE=30          # Price data cache TTL in seconds
CACHE_TTL_METADATA=300      # Asset metadata cache TTL in seconds  
CACHE_TTL_HISTORY=3600      # Historical data cache TTL in seconds
CACHE_TTL_STATIC=86400      # Static data cache TTL in seconds
CACHE_MAX_SIZE=1000         # Maximum cache entries

# MCP Server Configuration
MCP_SERVER_NAME=ergo-price-mcp
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_DESCRIPTION="MCP server for Ergo blockchain pricing data via CRUX Finance API"
MCP_PORT=8000               # Port for MCPO proxy server (default: 8000)
MCP_SECRET_KEY=secret       # Secret key for MCPO proxy authentication

# Logging Configuration
LOG_LEVEL=INFO              # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json             # json or text
LOG_REQUESTS=true           # Log API requests/responses
LOG_FILE=                   # Optional log file path (leave empty for console only)

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=100          # Requests per minute for CRUX API
RATE_LIMIT_BURST=10         # Burst size for rate limiting

# Development Configuration
DEVELOPMENT_DEBUG=false
DEVELOPMENT_DEV_MODE=false
DEVELOPMENT_MOCK_CRUX_API=false 